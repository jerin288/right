# Flask Application Secret Key
# IMPORTANT: Generate a secure key using: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-change-in-production

# Session Security (Set to True in production with HTTPS)
SESSION_COOKIE_SECURE=False

# Cashfree Payment Gateway Configuration
# Get your credentials from: https://merchant.cashfree.com/merchants/login
CASHFREE_APP_ID=
CASHFREE_SECRET_KEY=
CASHFREE_ENVIRONMENT=SANDBOX
CASHFREE_API_VERSION=2023-08-01

# SMS Notification Configuration (Optional - Free SMS using Fast2SMS)
# Get API key from: https://www.fast2sms.com/
ADMIN_PHONE_NUMBER=7510556919
SMS_GATEWAY_API_KEY=
USE_SMS_NOTIFICATION=False

# Database Configuration (SQLite by default)
# For production, consider PostgreSQL or MySQL
DATABASE_URL=sqlite:///ecommerce.db

# Application Configuration
DEBUG=True
FLASK_ENV=development
PORT=5000

# Email Configuration - DISABLED
# Email notification functionality has been removed from the application
# These settings are no longer used
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
# MAIL_DEFAULT_SENDER=your-email@gmail.com
# USE_EMAIL_NOTIFICATION=False

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216

# Security Headers (Production)
# FORCE_HTTPS=True
# HSTS_ENABLED=True

# Notes:
# 1. Copy this file to .env and fill in your actual values
# 2. NEVER commit .env file to version control
# 3. Add .env to .gitignore
# 4. For production: Use strong SECRET_KEY, enable HTTPS, set SESSION_COOKIE_SECURE=True
# 5. Cashfree SANDBOX is for testing, use PRODUCTION for live transactions
# 6. SMS notifications are used for order updates (configure Fast2SMS for SMS notifications)
